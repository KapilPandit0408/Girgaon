<%- include ("./partials/header")  %>

<div class="ui text container segment">
    <div class="ui huge header">NewBlog</div>
    <form action="/blogs" method="POST">
        <div class="field form-group form-control form-text text-muted">
            <label for="name">Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label for="name">Image</label>
            <input type="text" name="blog[image]" placeholder="image">
        </div>
        <div class="field">
            <label for="name">Blog content</label>
            <textarea name="blog[body]"></textarea>
        </div>
    <input class="ui inverted big green button" type="submit">
    </form>
</div>

