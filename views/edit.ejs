<%- include ("./partials/header")  %>

<div class="ui text container segment">
    <div class="ui huge header">Edit <%= blog.title %> </div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="name">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="name">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="name">Blog content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
    <input class="ui inverted big green button" type="submit">
    </form>
</div>

<%- include ("./partials/footer")  %>